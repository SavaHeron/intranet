.container-fluid
    table(style='width:100%')
      tr.assettable
        th.assettabletitle ID
        th.assettabletitle Title
        th.assettabletitle Contents
        th.assettabletitle Location
        th.assettabletitle Size
        th.assettabletitle Notes
        th.assettabletitle
        tbody.assettable
            tr.assettable
              form.login-form.text-center(action=`/assetmgt/asseteditor/${asset.ID}` method=`POST`)
                td
                  | #{asset.ID}
                td
                  input.form-control(type=`text` name=`Title` placeholder=asset.Title)
                td
                  input.form-control(type=`text` name=`Contents` placeholder=asset.Contents)
                td
                  input.form-control(type=`text` name=`Location` placeholder=asset.Location)
                td
                  input.form-control(type=`text` name=`Size` placeholder=asset.Size)
                td
                  input.form-control(type=`text` name=`Notes` placeholder=asset.Notes)
                td
                  button#load.button.btn.btn-primary(type=`submit`) Submit
